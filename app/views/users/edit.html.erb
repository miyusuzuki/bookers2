<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |messages| %>
            <li><%= messages %></li>
          <% end %>  
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
      <div class="form_group">
        <label for="user_name">Name</label>
        <%= f.text_field :name,class:"col-xs-12" %>
      </div>
      <div class="form_group">
        <label for="user_image">Image</label>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form_group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction,class:"col-xs-12" %>
      </div>
      <div class="form_group">
        <%= f.submit 'Update User' %>
      </div>  
        <% end %>
    </div> 
  </div>
</div>